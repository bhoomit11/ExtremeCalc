<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.extremecalculator.activities.AreaCalculatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/appLightBlue">

        <ImageButton
            android:id="@+id/ib_screenBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/appTransparent"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_previous_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/areaCalculatorScreenTitle"
            android:textColor="@color/appWhite"
            android:textSize="@dimen/font_large" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xSmall"
                android:background="@drawable/gray_border_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_resultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_xSmall"
                    android:layout_marginTop="@dimen/margin_xSmall"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Result : "
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_xSmall" />

                <TextView
                    android:id="@+id/tv_areaCalculatorResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_xSmall"
                    android:layout_marginLeft="@dimen/margin_xNormal"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="0000"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_large"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_xSmall"
                android:background="@color/appGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C3C5D5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_areaCalculatorType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_expand"
                    android:drawablePadding="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_xSmall"
                    android:paddingRight="@dimen/margin_xNormal"
                    android:paddingTop="@dimen/margin_small"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal"
                    android:text="To"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_areaCalculatorScale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_action_expand"
                    android:drawablePadding="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_xNormal"
                    android:paddingRight="@dimen/margin_xSmall"
                    android:paddingTop="@dimen/margin_small"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appBlack" />

            <!--Rectangle View-->

            <LinearLayout
                android:id="@+id/ll_calculateRectangleView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_xSmall"
                android:paddingTop="@dimen/margin_normal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lengthLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_rectangleLengthValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_rectangleLengthScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/edgeLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_rectangleEdgeValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_rectangleEdgeScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>
            </LinearLayout>


            <!--Triangle View-->

            <LinearLayout
                android:id="@+id/ll_calculateTriangleView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_xSmall"
                android:paddingTop="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edge1Label"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_triangleEdgeOneValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_triangleEdgeOneScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/edge2Label"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_triangleEdgeTwoValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_triangleEdgeTwoScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/edge3Label"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_triangleEdgeThreeValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_triangleEdgeThreeScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>
            </LinearLayout>

            <!--Trapezoid View-->

            <LinearLayout
                android:id="@+id/ll_calculateTrapezoidView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_xSmall"
                android:paddingTop="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/topEdgeLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_trapezoidTopEdgeValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_trapezoidTopEdgeScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/bottomEdgeLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_trapezoidBottomEdgeValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_trapezoidBottomEdgeScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/heightLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_trapezoidHeightEdgeValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_trapezoidHeightEdgeScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

            </LinearLayout>

            <!--Circle View-->

            <LinearLayout
                android:id="@+id/ll_calculateCircleView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_xSmall"
                android:paddingTop="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radiusLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_circleRadiusValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_circleRadiusScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>


            </LinearLayout>

            <!--Ellipse View-->

            <LinearLayout
                android:id="@+id/ll_calculateEllipseView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_xSmall"
                android:paddingTop="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/majorAxesLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_ellipseMajorAxesValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_ellipseMajorAxesScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/minorAxesLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_ellipseMinorAxesValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_ellipseMinorAxesScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>
            </LinearLayout>

            <!--Parallelogram View-->

            <LinearLayout
                android:id="@+id/ll_calculateParallelogramView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_xSmall"
                android:paddingTop="@dimen/margin_normal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/baseLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_parallelogramBaseValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_parallelogramBaseScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:text="@string/heightLabel"
                    android:textColor="@color/appBlack"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/appTorqueEditTextHeight"
                    android:layout_marginTop="@dimen/margin_xNormal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_parallelogramHeightValue"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_border_gray_bg"
                        android:digits="@string/allowDigitsForNumber"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_parallelogramHeightScale"
                        android:layout_width="@dimen/appTorqueEditTextWidth"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:background="@drawable/gray_border_blue_bg"
                        android:drawableLeft="@drawable/ic_action_expand"
                        android:drawablePadding="@dimen/margin_small"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_xSmall"
                        android:singleLine="true"
                        android:textColor="@color/appBlack"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_calculate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/margin_normal"
                    android:text="@string/calculateButtonLabel"
                    android:textColor="@color/appLightBlue"
                    android:textSize="@dimen/font_normal" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/margin_xSmall"
                    android:background="@color/appGray" />

                <TextView
                    android:id="@+id/tv_clear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/margin_normal"
                    android:text="@string/ClearButtonLabel"
                    android:textColor="@color/appLightBlue"
                    android:textSize="@dimen/font_normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>