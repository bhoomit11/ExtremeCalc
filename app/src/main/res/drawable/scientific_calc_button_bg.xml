<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/appWhite"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">

            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>

            <solid android:color="@color/appLightBlue"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/appWhite"/>
        </shape>
    </item>


</layer-list>